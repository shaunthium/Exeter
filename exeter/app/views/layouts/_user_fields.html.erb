<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>
  <br>
  <% if view == "new" %>
    <%= f.submit "Create my account", class: "btn btn-primary" %>
  <% else %>
    <%= f.submit "Update my information", class: "btn btn-primary" %>
  <% end %>
<% end %>
