<div class="container-fluid">
    <div class="row jumbotron">
        <% if !logged_in? %>
            <div class="col-md-6 col-md-offset-3">
                <%= form_for(:session, url: login_path) do |f| %>
                    <%= f.label :email %>
                    <%= f.email_field :email %>

                    <%= f.label :password %>
                    <%= f.password_field :password %>

                    <%= f.submit "Login", class: "btn btn-primary" %>
                <% end %>
            </div>
        <% else %>
            <p>Logged in!</p>
        <% end %>
    </div>
</div>
