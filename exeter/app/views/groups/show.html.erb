<div class="container-fluid">
    <h3>Group name:</h3>
    <h4><%= @group.name %></h4>
    <br>
    <h5><%= link_to "Add friends to group", edit_group_path(@group, view: "add"), class: "btn btn-primary" %></h5>
    <h5><%= link_to "Remove friends from group", edit_group_path(@group, view: "remove"), class: "btn btn-primary" %></h5>
    <br>
    <h3>Group members:</h3>
    <ol>
    <% @members_groups.each do |group| %>
        <li>
            <%= User.find(group.member_id).name %>
        </li>
    <% end %>
    </ol>
</div>
