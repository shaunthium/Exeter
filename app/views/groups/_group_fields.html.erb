<%= form_for(@group, url: url) do |f| %>
    <div class="form-group">
        <%= f.label :name, "Group name:" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <% if view == "new" %>
        <%= f.submit "Create group", class: "btn btn-primary" %>
    <% else %>
        <%= f.submit "Update group", class: "btn btn-primary" %>
    <% end %>
<% end %>
