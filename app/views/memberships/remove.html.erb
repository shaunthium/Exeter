<% provide(:title, "Remove members from group") %>
<div class="container-fluid">
    <%= form_tag(membership_path(1), method: :delete) do %>
        <ol>
            <% @members.each do |member| %>
                <li>
                    <%= render "membership_checkboxes", member: member %>
                </li>
            <% end %>
        </ol>
        <%= hidden_field_tag :group_slug, @group_slug %>
        <%= submit_tag "Remove friends from group", class: "btn btn-primary" %>
    <% end %>
</div>
